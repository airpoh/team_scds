{
  "composite_weights": {
    "comment": "Weights for all CommentSense modules (must sum to 1.0)",
    "emotion_sentiment": 0.15,
    "emoji_visual": 0.10,
    "multilingual": 0.10,
    "crisis_safety": 0.15,
    "network_influence": 0.10,
    "quality_scoring": 0.20,
    "spam_authenticity": 0.15,
    "predictive_insights": 0.05
  },
  
  "kpi_thresholds": {
    "comment": "Score ranges for KPI grades",
    "excellent": 85,
    "good": 70,
    "fair": 50,
    "poor": 0
  },
  
  "risk_adjustments": {
    "comment": "Penalty factors for various risks (0.0 = no penalty, 1.0 = maximum penalty)",
    "high_crisis_risk": 0.4,
    "negative_sentiment_penalty": 0.2,
    "spam_bot_penalty": 0.3,
    "low_quality_penalty": 0.25,
    "fake_engagement_penalty": 0.3,
    "language_barrier_penalty": 0.1
  },
  
  "module_configs": {
    "emotion_sarcasm": {
      "batch_size": 32,
      "confidence_threshold": 0.1
    },
    
    "visual_emoji": {
      "enable_vision": true,
      "emoji_sentiment_weight": 0.3
    },
    
    "multilingual": {
      "target_language": "en",
      "translation_threshold": 0.8,
      "sentiment_analysis": true
    },
    
    "crisis_detection": {
      "alert_threshold": 0.7,
      "severity_levels": ["low", "medium", "high", "critical"]
    },
    
    "network_analysis": {
      "fast_mode": true,
      "use_zeroshot": false,
      "use_persona_cluster": true,
      "use_bertopic": false
    },
    
    "quality_scoring": {
      "model_name": "distilbert-base-uncased",
      "weights": {
        "relevance": 0.5,
        "informativeness": 0.3,
        "constructiveness": 0.2
      },
      "thresholds": {
        "relevance": 0.5,
        "informativeness": 0.3,
        "constructiveness": 0.4
      }
    },
    
    "spam_detection": {
      "spam_thresholds": {
        "url_count": 2,
        "emoji_ratio": 0.5,
        "caps_ratio": 0.7,
        "repeated_chars": 5,
        "promotional_keywords": 3
      },
      "minhash_settings": {
        "num_perm": 128,
        "threshold": 0.8,
        "shingle_size": 3
      },
      "bot_detection": {
        "min_cluster_size": 3,
        "similarity_threshold": 0.7,
        "temporal_window_hours": 24,
        "min_repetition_rate": 0.6
      }
    },
    
    "predictive_analytics": {
      "anomaly_detection": {
        "contamination": 0.1,
        "n_estimators": 100
      },
      "soe_prediction": {
        "model_type": "xgboost",
        "n_estimators": 100,
        "max_depth": 6,
        "learning_rate": 0.1
      },
      "feature_engineering": {
        "temporal_windows": [1, 3, 7, 14],
        "lag_features": [1, 2, 3, 7]
      }
    }
  },
  
  "performance": {
    "enable_parallel": true,
    "batch_processing": true,
    "cache_results": true,
    "max_processing_time": 300,
    "memory_limit_mb": 2048
  },
  
  "dashboard": {
    "update_frequency": "real-time",
    "chart_types": ["bar", "line", "pie", "scatter", "heatmap"],
    "export_formats": ["json", "csv", "pdf"],
    "alert_thresholds": {
      "composite_kpi_drop": 10,
      "crisis_alert_count": 5,
      "spam_rate_spike": 0.2
    }
  }
}